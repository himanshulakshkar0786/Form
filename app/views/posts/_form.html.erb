<%= form_for @post, remote: true, html: { multipart: true } do |f| %>

<% if @post.errors.any? %>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
			<li style = "color:red;"><%= msg %></li>
			<% end %>
		</ul>
<% end %>

<p>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
</p>

<p>
	<%= f.label :description %><br>
	<%= f.text_area :description %>
</p>

<p>
	<%= f.label :category_id %><br>
	<%= f.select :category_id, Category.pluck(:name, :id), include_blank: true %>
</p>

<p>
	<%= f.label :image %><br/>
	<%= f.file_field :image %>
</p>

<p>
	<%= f.submit class:"btn btn-xs btn-primary"%>
</p>

<% end %>