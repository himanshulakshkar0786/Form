<%= form_for([@post, @comment])  do |f| %>
	
	<% if @comment.errors.any? %>
			<ul>
				<% @comment.errors.full_messages.each do |msg| %>
					<li style = "color:red;"><%= msg %></li>
				<% end %>
			</ul>
	<% end %>
    
    <%= f.label :Description %><br>
	<%= f.text_area :description %><br>
	<%= f.submit class:"btn btn-xs btn-primary" %>
<% end %>